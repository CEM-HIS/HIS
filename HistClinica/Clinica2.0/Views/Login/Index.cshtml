@model Clinica2._0.DTO.Logueo
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/styles.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div class="login-med">
        <div class="bg-white headerLogin">
            <img class="imglogo" src="~/images/imgclinica.png" />
        </div>
        <div class="sub-main-w3">
            @using (Html.BeginForm())
            {

                <h2>Por favor inicie sesión</h2>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-style-agile">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-style-agile">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-style-agile">
                    <div class="checkbox">
                        <label asp-for="RememberMe">
                            <input asp-for="RememberMe" />
                            @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="wthree-text">
                    <ul>
                        <li>
                            <a href="#">Olvidaste tu contraseña?</a>
                        </li>
                    </ul>
                </div>
                <input type="submit" id="btnIngresar" value="Ingresa">
                @if (ViewBag.error != null)
                {
                    <div class="col-sm-12 alert alert-danger text-center" role="alert" style="margin-top: 15px;">
                        @ViewBag.error
                    </div>
                }
            }
        </div>
        <div class="clear"></div>
    </div>

