@model Clinica2._0.DTO.CronogramaDTO
<div class="modal-dialog modal-lg" role="document">
	<div class="modal-content">
		<div class="modal-header">
			<h5 class="modal-title text-center" id="exampleModalLabel">Actualizar cronograma</h5>
			<button type="button" class="close" data-dismiss="modal" aria-label="Close">
				<span aria-hidden="true">&times;</span>
			</button>
		</div>
		@using (Html.BeginForm("Edit", "Cronograma", FormMethod.Post, new { @id = "frmeditarcronograma" }))
		{
			@Html.AntiForgeryToken()
			@Html.ValidationSummary(true, "", new { @class = "text-danger" })
			<div class="modal-body">
				<div class="col-sm-12 pb-5 pt-2">
					<div class="row pb-2">
						<div class="col-sm-6">
							@Html.HiddenFor(m => m.idProgramMedica)

							<div class="row">
								
                                <div class="col-sm-11">
                                    <div class="input-style">
                                        <label class="form-label">Medico</label>
                                        @Html.DropDownListFor(m => m.idMedico, new SelectList(ViewBag.listamedicos, "idMedico", "nombres"), "Seleccione", new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.idMedico, "", new { @class = "text-danger" })
									</div>
                                </div>
                            </div>
						</div>
						<div class="col-sm-6">
							<div class="row">
                                <div class="col-sm-11">
                                    <div class="input-style">
                                        <label class="form-label">Especialidad</label>
                                        @Html.DropDownListFor(m => m.idEspecialidad, new SelectList(ViewBag.listaespecialidades, "idtab", "descripcion"), new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.idEspecialidad, "", new { @class = "text-danger" })
                                    </div>
								</div>
                            </div>
						</div>
					</div>
					<div class="row pb-2">
						<div class="col-sm-6">
							<div class="row">								
                                <div class="col-sm-11">
                                    <div class="input-style">
                                        <label class="form-label">Fecha Inicio</label>
                                        @Html.EditorFor(m => m.fechaInicio, new { htmlAttributes = new { @class = "form-control", @type = "Date" } })
                                        @Html.ValidationMessageFor(model => model.fechaInicio, "", new { @class = "text-danger" })
                                    </div>
								</div>
                            </div>
						</div>
						<div class="col-sm-6">
							<div class="row">
                                <div class="col-sm-11">
                                    <div class="input-style">
                                        <label class="form-label">Fecha Fin</label>
                                        @Html.EditorFor(m => m.fechaFin, new { htmlAttributes = new { @class = "form-control", @type = "Date" } })
                                        @Html.ValidationMessageFor(model => model.fechaFin, "", new { @class = "text-danger" })
                                    </div>
								</div>
                            </div>
						</div>
					</div>
					<div class="row pb-2">
						<div class="col-sm-6">
							<div class="row">
                                <div class="col-sm-11">
                                    <div class="input-style">
                                        <label class="form-label">Hora Inicio</label>
                                        @Html.DropDownListFor(m => m.horaInicio, new SelectList(ViewBag.listahoras), new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.horaInicio, "", new { @class = "text-danger" })
                                    </div>
								</div>
							</div>
						</div>
						<div class="col-sm-6">
							<div class="row">
                                <div class="col-sm-11">
                                    <div class="input-style">
                                        <label class="form-label">Hora Fin</label>
                                        @Html.DropDownListFor(m => m.horaFin, new SelectList(ViewBag.listahoras), new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.horaFin, "", new { @class = "text-danger" })
                                    </div>
								</div>
							</div>
						</div>
					</div>
					<div class="row pb-2">
						<div class="col-sm-6">
							<div class="row">
                                <div class="col-sm-11">
                                    <div class="input-style">
                                        <label class="form-label">Estado</label>
                                        @Html.DropDownListFor(m => m.idEstado, new SelectList(ViewBag.lestado, "idtab", "descripcion"), new { @class = "form-control" })
                                    </div>
								</div>
							</div>
						</div>
						<div class="col-sm-6">
							<div class="row">
                                <div class="col-sm-11">
                                    <div class="input-style">
                                        <label class="form-label">Consultorio</label>
                                        @Html.DropDownListFor(m => m.idConsultorio, new SelectList(ViewBag.listaconsultorio, "idtab", "descripcion"), new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.idConsultorio, "", new { @class = "text-danger" })
                                    </div>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="modal-footer">
					<button style="width: 80px;" type="submit" class="btn btn-primary">Guardar</button>
					<button style="width: 80px;" type="submit" class="btn btn-secondary" data-dismiss="modal">Close</button>
				</div>
			</div>
		}

	</div>
</div>