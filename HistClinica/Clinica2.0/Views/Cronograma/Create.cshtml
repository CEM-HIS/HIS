@model Clinica2._0.Models.CRONOGRAMA_MEDICO

@using (Html.BeginForm("Create", "Cronograma", FormMethod.Post, new { @id = "frmcrearcronograma" }))
{
	@Html.AntiForgeryToken()
	@Html.ValidationSummary(true, "", new { @class = "text-danger" })
	<div class="row pb-2">
		<div class="col-sm-4">
			<div class="row">
                <div class="col-sm-11">
                    <div class="input-style">
                        <label class="form-label">Medico</label>

                        @Html.DropDownListFor(m => m.idMedico, new SelectList(ViewBag.listamedicos, "idMedico", "nombres"), "Seleccionar", new
                        {
                            @class = "form-control",
                       data_cascade_combo = "#stypes",
                       data_cascade_combo_source = Url.Action("GetEspecialidad", "Cronograma"),
                       data_cascade_combo_param_name = "id"
                   })
                        @Html.ValidationMessageFor(model => model.idMedico, "", new { @class = "text-danger" })
                    </div>
                    </div>
                </div>
		</div>
		<div class="col-sm-4">
			<div class="row">
                <div class="col-sm-11">
                    <div class="input-style">
                        <label class="form-label">Especialidad</label>
                        @Html.DropDownListFor(m => m.idEspecialidad, new SelectList(ViewBag.listaespecialidades, "idtab", "descripcion"), "Seleccionar", new { @class = "form-control", id = "stypes" })
                        @Html.ValidationMessageFor(model => model.idEspecialidad, "", new { @class = "text-danger" })
                    </div>
                </div>
             </div>
		</div>
		<div class="col-sm-4">
			<div class="row">
                <div class="col-sm-11">
                    <div class="input-style">
                        <label class="form-label">Consultorio</label>
                        @Html.DropDownListFor(m => m.idConsultorio, new SelectList(ViewBag.listaconsultorio, "idtab", "descripcion"), "Seleccionar", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.idConsultorio, "", new { @class = "text-danger" })
                    </div>
				</div>
            </div>
		</div>
	</div>
	<div class="row pb-2">
		<div class="col-sm-4">
			<div class="row">
                <div class="col-sm-11">
                    <div class="input-style">
                        <label class="form-label">Fecha Inicio</label>
                        @Html.TextBoxFor(m => m.fechaInicio, new { @class = "form-control", @type = "Date" })
                        @Html.ValidationMessageFor(model => model.fechaInicio, "", new { @class = "text-danger" })

                    </div>
                  
                </div>
			</div>
		</div>
		<div class="col-sm-4">
			<div class="row">
                <div class="col-sm-11">
                    <div class="input-style">
                        <label  class="form-label">Fecha Fin</label>
                        @Html.TextBoxFor(m => m.fechaFin, new { @class = "form-control", @type = "Date" })
                        @Html.ValidationMessageFor(model => model.fechaFin, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
		</div>
		<div class="col-sm-4">
			<div class="row">
                <div class="col-sm-11">
                    <div class="input-style">
                        <label  class="form-label">Hora Inicio</label>
                        @Html.DropDownListFor(m => m.horaInicio, new SelectList(ViewBag.listahoras), "Seleccione", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.horaInicio, "", new { @class = "text-danger" })
                    </div>
                    </div>
                </div>
		</div>
		<div class="col-sm-4 pt-2">
			<div class="row">
                <div class="col-sm-11">
                    <div class="input-style">
                        <label  class="form-label">Hora Fin</label>
                        @Html.DropDownListFor(m => m.horaFin, new SelectList(ViewBag.listahoras), "Seleccione", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.horaFin, "", new { @class = "text-danger" })
                    </div>
                    </div>
                </div>
		</div>
	</div>
	<div class="row pb-2 text-right">
		<div class="col-sm-12">
			<button class="btn btn-primary" id="Crear">Guardar</button>
		</div>
	</div>
}
<script src="~/js/comboaninado.js"></script>
@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}