
@model List<Clinica2._0.DTO.licenciaDTO>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="col-sm-12">
        <div class="row">
            <div class="col-sm-12 pb-4">
                <h2>Solicitud de licencias</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-8 form-inline">
                <label class="pr-2">Codigo:</label>
                <input type="text" id="codigo" class="form form-control" name="codigo" />


                <input type="submit" value="Buscar" class="btn btn-primary" />
            </div>
            <div class="col-sm-4">

            </div>
        </div>
        <div class="row pt-2">
            <div class="col-sm-12 text-right pb-2">
                <button onclick="cargarModalCrearLicencia();" class="btn btn-primary">Registrar Solicitud</button>
            </div>
            <div class="col-sm-12">
                <table class="table table-bordered table-hover" id="licenciagrid">
                    <thead>
                        <tr>
                            <th>
                                Nro Solicitud
                            </th>
                            <th>
                                Mèdico
                            </th>
                            <th>
                                Fecha
                            </th>
                            <th>
                                Estado
                            </th>
                            <th>
                                Acciones
                            </th>
                        </tr>
                    </thead>
                    <tbody class="tbody">
                        @foreach (var item in Model)
                        {


                            <tr>
                                <td>@item.idLicencia</td>
                                <td>@item.medico</td>
                                <td>
                                    @item.fechaIni
                            </td>
                            <td>@item.estado</td>
                            <td>
                                <a type="submit" style="color:white;" class="edit btn btn-primary mt-small-2" aria-hidden="true">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalagregarlicencia" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
</div>
<script src="~/js/cargavistaparcial.js"></script>