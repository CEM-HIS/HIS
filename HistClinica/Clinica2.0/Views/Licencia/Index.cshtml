<div class="container">
	<div class="col-sm-12">
		<div class="row">
			<div class="col-sm-12 left" style="height: 50px;">
				<div class="card card-primary card-his">
					<div class="card-header card-shadow">
						<h2>Licencias</h2>
					</div>
				</div>
			</div>
		</div>
