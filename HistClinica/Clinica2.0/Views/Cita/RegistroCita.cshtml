				<div class="row pb-2">
					<div class="col-sm-3">
						<div class="row">
							<div class="col-sm-10">
								<div class="input-style">
									<label class="form-label">Medico</label>
									<input type="hidden" name="idmedico" id="idmedicocro" />
									<input type="text" class="form-control" id="medico" />
									<span class="field-validation-valid text-danger" data-valmsg-for="idMedico" data-valmsg-replace="true"></span>
								</div>
							</div>
							<div class="col-sm-2 text-right">
								<div class="input-style">
									<a onclick="FiltroCronogramaMedEsp();" class="btn btn-primary text-white"><i class="fa fa-search" aria-hidden="true"></i></a>
								</div>

							</div>
						</div>
					</div>
					<div class="col-sm-3">
						<div class="row">
							<div class="col-sm-11">
								<div class="input-style">
									<label class="form-label">Especialidad</label>
									@Html.DropDownList("idespecialidad", new SelectList(ViewBag.listaespecialidades, "idtab", "descripcion"), "Seleccionar", new { @class = "form-control", id = "idespecialidad" })
									<span class="field-validation-valid text-danger" data-valmsg-for="idEspecialidad" data-valmsg-replace="true"></span>
								</div>
							</div>
						</div>
					</div>

					<div class="col-sm-3">
						<div class="row">
							<div class="col-sm-11">
								<div class="input-style">
									<label class="form-label">Fecha </label>
									<input class="form-control" id="fechaIni" name="fecha" type="Date">
									<span class="field-validation-valid text-danger" data-valmsg-for="fechaIni" data-valmsg-replace="true"></span>

								</div>

							</div>
						</div>
					</div>
					<div class="col-sm-3" style="height: 65px; display: flex; flex-direction: column; justify-content: center;">
						<div class="col-sm-12" style="height: 65px; display: flex; flex-direction: column; justify-content: center;">
							<button type="submit" class="btn btn-primary btn-buscar" style="width: 45px;"><i class="fa fa-search" aria-hidden="true"></i><span class="hidden-text">Buscar</span></button>
						</div>
					</div>

				</div>
			}




			<div class="row pt-3">
				<div class="col-sm-12">
					<table class="table table-striped table-bordered" style="width:100%" id="citagrid">
						<thead>
							<tr>
								<th>Id</th>
								<th>Hora</th>
								<th>Medico</th>
								<th>CMP</th>
								<th>Historia</th>
								<th>Paciente</th>
								<th>Confirmado</th>
								<th>Hora <br> Registro</th>
								<th>N° <br>cuenta</th>
								<th>N° Orden</th>
								<th>Consultorio</th>
								<th>Tipo Afiliado</th>
								<th>Acciones</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<td>@item.idCita</td>
									<td>@item.hora</td>
									<td nowrap>@item.Medico</td>
									<td>@item.CMP</td>
									<td>@item.numeroHc</td>
									<td>@item.nombrePaciente</td>
									<td>@item.estadoPago</td>
									<td>@item.horaregistro</td>
									<td>@item.cuenta</td>
									<td>@item.numeroorden</td>
									<td>@item.consultorio</td>
									<td></td>
									<td>
										<a asp-controller="Cita" asp-action="Registro" asp-route-id="@item.idCita" style="color:white;" class="edit btn btn-primary mb-2"><i class="fas fa-plus"></i></a>
										<button type="submit" id="editar" class="edit btn btn-primary mb-2"><i class="fas fa-address-book"></i></button>
										<button type="submit" id="anular" class="delete btn btn-danger mb-2"><i class="fas fa-minus"></i></button>
									</td>
								</tr>
							}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>

</div>


