@model Clinica2._0.Clinica.DTO.CitaCupoDTO
<div class="modal-dialog modal-lg" role="document">
	<div class="modal-content">
		<div class="modal-header">
			<h2 class="modal-title text-center" id="exampleModalLabel1">Reprogramacion de cita ambulatoria</h2>
			<button type="button" class="close" data-dismiss="modal" aria-label="Close">
				<span aria-hidden="true">&times;</span>
			</button>
		</div>
		<div class="container">
			<div class="row">
				<div class="col-sm-12 pl-4">
					<div class="row">
						<div class="col-sm-12 pl-2" style="border: 1px solid rgba(128, 128, 128, 0.29);
            									border-radius: 9px;
            									margin-top: 1rem;
            			">
							<input type="hidden" id="idcita" name="name" asp-for="idcita" />
							<input type="hidden" id="idpaciente" name="name" asp-for="idpaciente" />
							<div class="row">
								<div class="col-sm-12">
									<span class="text-red">Elija fecha y medico, a quien le transferira los pacientes citados</span>
								</div>
							</div>
							<div class="row">
								<div class="col-sm-4">
									<div class="input-style">
										<label for="txtNroDocumento" class="form-label">Fecha</label>
										<input type="date" name="fecha" id="fechacita" class="form-control" />
									</div>
								</div>
								<div class="col-sm-8">

								</div>
							</div>
							<div class="row">
								<div class="col-sm-5">
									<div class="input-style">
										<label for="txtNroDocumento" class="form-label">Medico</label>
										@Html.DropDownList("idmedicocit", new SelectList(ViewBag.listamedicos, "idMedico", "nombres"), "Seleccionar", new
									{
								   @class = "form-control",
								   data_cascade_combo_med = "#espe",
								   data_cascade_combo_source_med = Url.Action("GetEspecialidad", "Cronograma"),
								   data_cascade_combo_param_name_med = "id"
							   })
									</div>
								</div>
								<div class="col-sm-7">

								</div>
							</div>
							<div class="row">
								<div class="col-sm-5">
									<div class="input-style">
										<label for="txtNroDocumento" class="form-label">Especialidad</label>
										@Html.DropDownList("idespecialidadcit", new SelectList(ViewBag.listaespecialidades, "idtab", "descripcion"), "Seleccionar", new { @class = "form-control", id = "espe" })
									</div>
								</div>
								<div class="col-sm-7">

								</div>
							</div>
							<div class="row pt-2">
								<div class="col-sm-12">
									<a style="color:white;" class="btn btn-primary" onclick="BuscarCita();">Buscar</a>
								</div>
							</div>


							<div class="row pt-3">
								<div class="col-sm-12">
									<table class="table table-responsive table-bordered table-hover text-center" id="citareprogrid">
										<thead>
											<tr>
												<th>Id</th>
												<th>Hora</th>
												<th>Medico</th>
												<th>CMP</th>
												<th>Historia</th>
												<th>Paciente</th>
												<th>Confirmado</th>
												<th>Hora <br> Registro</th>
												<th>N° <br>cuenta</th>
												<th>N° Orden</th>
												<th>Consultorio</th>
												<th>Tipo Afiliado</th>
												<th>Acciones</th>
											</tr>
										</thead>
										<tbody>
											@foreach (var item in Model.citas)
											{
												<tr>
													<td>@item.idCita</td>
													<td>@item.hora</td>
													<td nowrap>@item.Medico</td>
													<td>@item.CMP</td>
													<td>@item.numeroHc</td>
													<td>@item.nombrePaciente</td>
													<td>@item.estadoPago</td>
													<td>@item.horaregistro</td>
													<td>@item.cuenta</td>
													<td>@item.numeroorden</td>
													<td>@item.consultorio</td>
													<td></td>
													<td>
														<a style="color:white;" id="reprogramar" class="edit btn btn-primary mb-2"><i class="fas fa-address-book"></i></a>
													</td>
												</tr>
											}
										</tbody>
									</table>
								</div>
							</div>
						</div>
					</div>

				</div>
			</div>

		</div>
	</div>
</div>