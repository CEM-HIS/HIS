@model Clinica2._0.DTO.PersonaDTO

<h5 class="mt-3">Datos del paciente:</h5>

@using (Html.BeginForm("BuscarPaciente","Cita"))
{
	<div class="row mt-3">
		<input id="paciente_idPaciente" name="paciente.idPaciente" type="hidden" value="">
		<div class="col-sm-6 mb-3">
			<select class="form-control  small-input">
				<option value="value">DNI</option>
			</select>
		</div>
		<div class="col-sm-6 mb-3">
			<input type="text" id="dnitest" name="dni" class="form-control small-input">
		</div>

		<div class="col-sm-4"><button class="btn btn-info" type="button" data-toggle="modal" data-target="#buscarModal">SITEDS</button></div>
		<div class="col-sm-8 text-right">

			<button class="btn btn-info" type="submit"><i class="fas fa-search"></i></button>
			<a class="btn btn-primary" type="submit" asp-controller="Paciente" asp-action="Create"><i class="fas fa-user-plus"></i></a>
			<a class="btn btn-primary" type="submit" href="#"><i class="far fa-edit"></i></a>
		</div>
	</div>


	<div class="col-sm-12">
		<div class="row pt-3">
			<div class="col-sm-4">
				<label>Nombre</label>
			</div>
			<div class="col-sm-8">
				<div class="divpac">
					<label>@Html.DisplayFor(m => m.apellidoPaterno) @Html.DisplayFor(m => m.apellidoMaterno) @Html.DisplayFor(m => m.nombres) </label>
				</div>
			</div>
		</div>
		<div class="row" style="padding-top: 10px;">
			<div class="col-sm-4">
				<label>DNI</label>
			</div>
			<div class="col-sm-8">
				@Html.TextBoxFor(m => m.numeroDocumento, new { @class = "form-control  small-input", @disabled = "true" })
			</div>
		</div>
		<div class="row" style="padding-top: 10px;">
			<div class="col-sm-4">
				<label>Correo</label>
			</div>
			<div class="col-sm-8">
				@Html.TextBoxFor(m => m.correo, new { @class = "form-control  small-input", @disabled = "true" })
			</div>
		</div>
		<div class="row" style="padding-top: 10px;">
			<div class="col-sm-4">
				<label>Edad</label>
			</div>
			<div class="col-sm-8">
				@Html.TextBoxFor(m => m.edad, new { @class = "form-control  small-input", @disabled = "true" })
			</div>
		</div>
		<div class="row pb-2" style="padding-top: 10px;">
			<div class="col-sm-4">
				<label>Telefono</label>
			</div>
			<div class="col-sm-8">
				<input class="form-control  small-input" disabled="true" id="descripcionOcupacion" name="descripcionOcupacion" type="text" value="">
			</div>
		</div>
		<div class="row pb-2" style="padding-top: 10px;">
			<div class="col-sm-4">
				<label>Sexo</label>
			</div>
			<div class="col-sm-8">
				<input class="form-control  small-input" disabled="true" id="descripcionOcupacion" name="descripcionOcupacion" type="text" value="">

			</div>
		</div>
		<div class="row pb-2" style="padding-top: 10px;">
			<div class="col-sm-4">
				<label>Tipo paciente</label>
			</div>
			<div class="col-sm-8">
				<input class="form-control  small-input" disabled="true" id="descripcionOcupacion" name="descripcionOcupacion" type="text" value="">

			</div>
		</div>

	</div>
}

