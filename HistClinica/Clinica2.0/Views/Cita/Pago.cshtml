
@model Clinica2._0.DTO.CitaDTO
<div class="modal-dialog modal-lg" style="max-width: 1200px;" role="document">
	<div class="modal-content">
		<div class="modal-header bg-primary">
			<h2 class="modal-title text-center" id="exampleModalLabel1">Paga Online de forma segura con tu tarjeta de credito o debito</h2>
			<button type="button" class="close" data-dismiss="modal" aria-label="Close">
				<span aria-hidden="true">&times;</span>
			</button>
		</div>

		<div class="container pt-2 pb-4">
			@using (Html.BeginForm())
			{
				@Html.HiddenFor(m => m.idCita)
				<div align="center">
					<div align='left'>
						<font color="gray"><h1>Ingresa los datos de tu tarjeta de credito o debito</h1></font>
					</div>
					<h4></h4>

					<h4></h4>


					<form action="#" class="credit-card-div">
						<div class="panel panel-default">
							<div class="panel-heading">

								<div class="row ">
									<div class="col-md-4">
										<input type="text" class="form-control" placeholder="Ingrese el Numero de Tarjeta" />
									</div>
								</div>
								<h4></h4>

								<div class="row ">


									<div class="col-md-1 col-sm-1 col-xs-1">
										<span class="help-block text-muted small-font"> Mes de Vencimiento</span>
										<input type="text" class="form-control" placeholder="MM" />
									</div>
									<div class="col-md-1 col-sm-1 col-xs-1">
										<span class="help-block text-muted small-font">  Año de Vencimiento</span>
										<input type="text" class="form-control" placeholder="YY" />
									</div>
								</div>

								<h4></h4>

								<div class="row ">
									<div class="col-md-4 pad-adjust">

										<input type="text" class="form-control" placeholder="Nombre en la Tarjeta" />
									</div>
								</div>

								<h4></h4>
								<h4></h4>
								<div class="row" align="left">
									<div class="col-md-12 pad-adjust">
										<div class="checkbox">
											<label>
												<input type="checkbox" checked class="text-muted"> Guardar detalles para pagos rápidos.<a href="#"> ¿cómo?</a>
											</label>
										</div>
									</div>
								</div>
								<div align="left">

									<button class="btn btn-primary" >
										Pagar
									</button>

									<a style="color:white;" class="btn btn-danger" data-dismiss="modal" align="right">
										Cerrar
									</a>
								</div>

							</div>
						</div>
					</form>

				</div>
			}
		</div>

	</div>
</div>