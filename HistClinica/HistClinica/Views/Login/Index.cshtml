@model HistClinica.Models.D001_USUARIO
@{
	Layout = null;
}

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>@ViewBag.Title</title>
	<link href="~/css/styles.css" rel="stylesheet" />
	<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
</head>
<body style="position: fixed;
    width: 100%;
    height: 100vh;">
	<div class="login-med">
		<div class="bg-white headerLogin">
			<img class="imglogo" src="~/images/imgclinica.png" />
		</div>
		<div class="sub-main-w3">
			@using (Html.BeginForm())
			{
				
				<h2>Por favor inicie sesión</h2>
				<div class="form-style-agile">
					@Html.TextBoxFor(m => m.loginUser, new { @class = "form-control" })
				</div>
				<div class="form-style-agile">
					@Html.TextBoxFor(m => m.claveUser, new { @class = "form-control", @type = "password" })
				</div>
				<div class="wthree-text">
					<ul>
						<li>
							<a href="#">Olvidaste tu contraseña?</a>
						</li>
					</ul>
				</div>
				<input type="submit" id="btnIngresar" value="Ingresa">
				@if (ViewBag.error != null)
				{
					<div class="col-sm-12 alert alert-danger text-center" role="alert" style="margin-top: 15px;">
						@ViewBag.error
					</div>
				}
			}
		</div>
		<div class="clear"></div>
	</div>

	<script>
